{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "blockbiva/hero",
    "version": "1.0.0",
    "title": "Blockbiva Hero",
    "category": "design",
    "icon": "cover-image",
    "description": "A full-width hero container with advanced background and spacing controls.",
    "supports": {
        "html": false,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true,
            "gradients": true,
            "link": true
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "layout": {
            "allowSwitching": false,
            "allowInheriting": true,
            "default": {
                "type": "constrained"
            }
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "textAlign": true
        }
    },
    "textdomain": "blockbiva",
    "style": "file:./style.css",
    "render": "file:./render.php"
}